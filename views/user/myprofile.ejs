<%- include("../partials/header")%>
<%- include("../partials/navbar")%>
<link href="/css/myprofile.css" rel="stylesheet" >

<div class="container" style="margin-top: 5rem; min-height:80vh;">

  <%- include("../partials/flash")%>

  
    <div class="row ">
        <div class="col-12 ">
            <h5 class="card-title fs-1 "> Profile </h5>
            <div class="card" >
              <div id ="load" ></div>
                <div id="profileBox" style="background-color:#E8E8E8">
                <img id="profile" src="<%= user.profilePic.url %>" class="rounded mt-2 mx-auto d-block" style="width:30vw;height:30vw">
                <button id="changePic" type="button" class="btn  btn-dark btn-lg"data-toggle="modal" data-target="#exampleModal" data-whatever="@mdo">Change Profile Pic</button>

                
                
                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                  <div class="modal-dialog" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Change Profile Pic</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                      <div class="modal-body">
                        <form  action="/upload-pic" method="POST" style="max-width:70%;margin:10px auto" >
                          
                          <div class="mb-3">
                            <label for="img" class="form-label">Profile Pic</label>
                            <input id="getProfile" type="file" class="form-control"  placeholder="Profile Pic" name="pic" required>
                            
                          </div>
                          </form>
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button id="submit" type="button" class="btn btn-primary">upload</button>
                      </div>
                    </div>
                  </div>
                </div>





                </div>
                

                <div class="card-body">
                    <%if(currentUser){%>
                  <h5 class="card-title"><%=currentUser.username %></h5>
                
                  <p class="card-text" style="white-space: pre-wrap;"><%= currentUser.email %></p>

                  <div class="mt-3">
                    <form action="/logout" method="GET">
                        <button class="btn btn-danger">Logout</button>
                  </form>
                  </div>
                 <% } %>
                </div>
              </div>
        </div>
     



        <div class="col-12 ">
         
          <div class="card" >
              <div class="card-body">
                  
                <h5 class="card-title">My Blogs</h5>

                <ul class="list-group">
               <% for(let blog of user.myblogs) { %>
                <li class="list-group-item "><a href="/blogs/<%= blog._id %>" style="color: inherit;text-decoration: none;"><p class="card-text" style="white-space: pre-wrap;font-weight: bold;"><%= blog.title %></p></a></li>
               <% } %>
                </ul>
              </div>
            </div>
      </div>

        </div>
        
        
</div>


<script src="/js/myprofile.js"></script>
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
